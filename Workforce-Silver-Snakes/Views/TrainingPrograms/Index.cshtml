@model IEnumerable<Workforce_Silver_Snakes.Models.TrainingProgram>

@{
    ViewData["Title"] = "Index";
}

    <h1 class="pageTitleHeads">Training Programs</h1>
<p>
    <a asp-action="Create" type="button" class="btn btn-primary bg-primary border-primary">Add Training Program</a>
</p>
<a type="button" class="btn btn-success btn-sm" asp-action="Index" asp-route-past="true">View Past Programs</a>
<a type="button" class="btn btn-success btn-sm" asp-action="Index">View Future Programs</a>
<table class="table table-hover table-striped">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxAttendees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr scope="row">
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxAttendees)
                    </td>
                    <td class="tableIcons">
                        @if (item.StartDate > DateTime.Now)
                        {
                        <a asp-action="Edit"
                           asp-route-id="@item.Id" title="Edit">

                            <img src="~/Icons/edit.svg" />
                        </a>
                        }
                    <a asp-action="Details"
                       asp-route-id="@item.Id" title="Details">

                        <img src="~/Icons/details.svg" />
                    </a>

                        @if (item.StartDate > DateTime.Now)
                        {
                    <a asp-action="Delete"
                       asp-route-id="@item.Id" title="Delete">

                        <img src="~/Icons/trash.svg" />
                    </a>
                        }
                    </td>
                </tr>
        }
    </tbody>
</table>

