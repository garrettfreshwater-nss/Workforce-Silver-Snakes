@model IEnumerable<Workforce_Silver_Snakes.Models.ViewModels.DepartmentsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Departments</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-primary bg-primary border-primary">Add Department</a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Budget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr scope="row">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employees)
            </td>
            <td class="tableIcons">
                <a asp-action="Edit"
                   asp-route-id="@item.Id" title="Edit">

                    <img src="~/Icons/edit.svg" />
                </a>
                <a asp-action="Details"
                   asp-route-id="@item.Id" title="Details">

                    <img src="~/Icons/details.svg" />
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
