@model Workforce_Silver_Snakes.Models.ComputerAddEmployeeViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="card border-success mb-3" style="max-width: 45rem;">
    <div class="card-header">
        <h3>Are you sure you want to delete this?</h3>
    </div>
        <div class="card-body">
            <h4> @Html.DisplayFor(model => model.Make) @Html.DisplayFor(model => model.Model)</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PurchaseDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PurchaseDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Make)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Make)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Model)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Model)
                </dd>
            </dl>
            <div class="cardButtons">
                <div>
                    <form asp-action="Delete">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="cardButtonIcon" type="button" data-toggle="tooltip" data-placement="right" title="Back To List" data-original-title="Back To List">
                            <img src="~/Icons/list.svg" />
                        </a>
                    </form>
                    </div>
                </div>
            </div>
    </div>
