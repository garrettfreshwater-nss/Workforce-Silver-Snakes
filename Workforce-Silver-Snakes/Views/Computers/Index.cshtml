@model IEnumerable<Workforce_Silver_Snakes.Models.ComputerAddEmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Computers</h1>
<p>
    <a asp-action="Create"  type="button" class="btn btn-primary bg-primary border-primary" >Add Computer</a>
</p>

<form class="form-inline my-2 my-lg-0" asp-controller="Computers" asp-action="Index">
    <input class="form-control mr-sm-2" type="text" name="searchString" placeholder="Filter Make/Model">
    <button class="btn btn-secondary my-2 my-sm-0 compSearch" type="submit">Filter</button>
</form>

<table class="table table-hover table-striped">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                Employee Assignment
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr scope="row">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.employee.FirstName) @Html.DisplayFor(modelItem => item.employee.LastName)
            </td>
            <td class="tableIcons">
                <a asp-action="Edit"
                   asp-route-id="@item.Id" title="Edit">

                    <img src="~/Icons/edit.svg" />
                </a>
                <a asp-action="Details"
                   asp-route-id="@item.Id" title="Details">

                    <img src="~/Icons/details.svg" />
                </a>
                @if (item.employee.FirstName == null)
                {
                    <a asp-action="Delete"
                        asp-route-id="@item.Id" title="Delete">

                    <img src="~/Icons/trash.svg" />
                    </a>
                }
                else
                {
                }
            </td>
        </tr>
}
    </tbody>
</table>
