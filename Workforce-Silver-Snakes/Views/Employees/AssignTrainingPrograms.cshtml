@model Workforce_Silver_Snakes.Models.ViewModels.EmployeeAddViewModel

@{
    ViewData["Title"] = "AssignTrainingPrograms";
}

<div class="card border-success mb-3" style="max-width: 45rem;">
    <div class="card-header">
        <h4> @Model.FirstName @Model.LastName </h4>
    </div>
    <div class="card-body">

        <div class="row">
            <div class="col-md-4">
                <form asp-controller="Employees" asp-action="AssignTrainingPrograms">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TrainingPrograms" class="control-label"></label>
                        <select asp-for="TrainingProgramIds" asp-items="@Model.TrainingProgramsOptions" class="form-control" multiple>
                        </select>
                        <span asp-validation-for="TrainingPrograms" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Assign Training Programs" class="btn btn-primary" />
                    </div>
                </form>
                <div class="cardButtons">
                    <a asp-action="Index" class="cardButtonIcon" type="button" data-toggle="tooltip" data-placement="right" title="Back To List" data-original-title="Back To List">
                        <img src="~/Icons/list.svg" />
                    </a>
                </div>
            </div>
        </div>
    </div>
    </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
